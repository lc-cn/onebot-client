{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "noLib": false,
    "declaration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "rootDir": "./src",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "onebot-client/*": ["./src/*"],
      "onebot-client": ["./src"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.js"]
}